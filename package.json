{
  "name": "pooler",
  "version": "1.2.2",
  "description": "A generic pooling interface and TypeScript/JavaScript implementation.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "precommit": "pretty-quick --staged",
    "prebuild": "rm -Rf lib",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "prerelease": "npm test",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "jest --verbose --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexsasharegan/pooler.git"
  },
  "author": "Alex Regan <alex.joseph.regan@gmail.com> (https://github.com/alexsasharegan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexsasharegan/pooler/issues"
  },
  "homepage": "https://github.com/alexsasharegan/pooler#readme",
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.0",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "prettier": "^1.11.1",
    "pretty-quick": "^1.4.1",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  }
}
