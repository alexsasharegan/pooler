{
  "name": "pooler",
  "version": "1.1.0",
  "description": "A generic pooling interface and TypeScript/JavaScript implementation.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prebuild": "[ -d lib ] && rm -R lib",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "test": "jest --verbose --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexsasharegan/pooler.git"
  },
  "author": "Alex Regan <alex.joseph.regan@gmail.com> (https://github.com/alexsasharegan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexsasharegan/pooler/issues"
  },
  "homepage": "https://github.com/alexsasharegan/pooler#readme",
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/node": "^9.4.4",
    "jest": "^22.2.2",
    "standard": "^10.0.3",
    "ts-jest": "^22.0.3",
    "typescript": "^2.7.1",
    "version": "^0.1.2"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/?(*.)(spec|test).(ts|js)",
      "**/src/?(*.)(spec|test).(js|ts)"
    ],
    "collectCoverageFrom": [
      "!src/**/*.types.{js,ts}",
      "src/**/*.{js,ts}"
    ],
    "mapCoverage": true
  }
}
